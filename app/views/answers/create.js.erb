<% if @answer.errors.present? %>
    <% @answer.errors.full_messages.each do |message|%>
        $('#errors').append('<%= j message %>');
    <%end%>
<% else %>
    $('#errors').html('');
    <% publish_to "/questions/#{@question.id}/answer" do %>
        $('.answers').html('<%= j render 'questions/answers' %>');
    <% end %>
    $('#answer_body_create').val('');


<% end %>